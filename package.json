{
  "name": "inversifyjs-fastifyjs-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for TypeScript applications using InversifyJS, FastifyJS, TSOA, Swagger, Zod, Prisma with Clean and Hexagonal Architecture",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsoa spec-and-routes",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts && tsoa spec-and-routes",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testMatch=\"**/__tests__/!(integration)/**/*.test.ts\"",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testMatch=\"**/__tests__/integration/**/*.test.ts\"",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/swagger": "7.6.1",
    "@fastify/swagger-ui": "1.10.2",
    "@prisma/client": "^5.9.1",
    "@tsoa/cli": "6.6.0",
    "@tsoa/runtime": "6.6.0",
    "@types/express": "5.0.1",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "fastify": "^4.26.1",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.1",
    "swagger-ui-express": "5.0.1",
    "tsoa": "^6.0.0",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/fastify-cors": "^2.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "prisma": "^5.9.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "uuid": "11.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^uuid$": "<rootDir>/node_modules/uuid",
      "ipaddr.js": "<rootDir>/node_modules/ipaddr.js/lib/ipaddr.js",
      "(.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "isolatedModules": true
        }
      ]
    },
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 1,
        "branches": 1,
        "functions": 1,
        "lines": 1
      }
    },
    "transformIgnorePatterns": []
  }
}
